{
  "arrowParens": "always",
  "bracketSameLine": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "**/*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.scss",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.html",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
